<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/dialog_background"
        android:stateListAnimator="@null">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:textStyle="bold"
            android:text="APPROVE"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/dimen12sp" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/dimen5dp"
            android:background="#cdced2" />
        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginBottom="@dimen/dimen10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="16dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:text="RED BULL - FYYHJJ777"
              android:layout_marginStart="@dimen/dimen10sp"
                android:textColor="#000"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_dialog_background"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/area_name"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginEnd="7dp"

                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:spinnerMode="dropdown"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:orientation="horizontal">

            <!--            <TextView-->
            <!--                android:id="@+id/dialogButtonNO"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                android:fontFamily="@font/montserrat_bold"-->
            <!--                android:paddingTop="12dp"-->
            <!--                android:paddingBottom="12dp"-->
            <!--                android:stateListAnimator="@null"-->
            <!--                android:text="@string/label_no"-->
            <!--                android:textAlignment="center"-->
            <!--                android:textColor="#007aff"-->
            <!--                android:textSize="@dimen/dimen14sp" />-->

            <!--            <View-->
            <!--                android:id="@+id/separator"-->
            <!--                android:layout_width="1dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:background="#cdced2" />-->

            <TextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:stateListAnimator="@null"
                android:textStyle="bold"
                android:text="SUBMIT"
                android:textColor="@color/black"
                android:background="@color/orange"
                android:textAlignment="center"
                android:textSize="@dimen/dimen14sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>