<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/dialog_background"
        android:stateListAnimator="@null">
        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dimen40dp"
            android:layout_height="@dimen/dimen40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dimen10dp"
            android:src="@drawable/ic_baseline_close_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titlelayout"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="12dp"
                android:layout_marginStart="@dimen/dimen50dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="16dp"
                android:paddingRight="12dp"
                android:text="APPROVE"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="@dimen/dimen12sp"
                android:textStyle="bold" />



        </LinearLayout>




        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/titlelayout"
            android:layout_marginTop="@dimen/dimen5dp"
            android:background="#cdced2" />

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginBottom="@dimen/dimen10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen10sp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="5dp"
                android:paddingTop="16dp"
                android:paddingRight="5dp"
                android:text="RED BULL - FYYHJJ777"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/dimen5dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/dialog_background"

                android:orientation="vertical">


                <Spinner
                    android:id="@+id/area_name"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginEnd="7dp"

                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:spinnerMode="dropdown"
                    android:textSize="13sp" />


            </LinearLayout>

            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="@dimen/dimen10sp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/custom_dialog_background"
                android:hint="Remarks *"
                android:paddingStart="@dimen/dimen10sp"
                android:paddingEnd="@dimen/dimen10sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/dimen12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen10sp"
            android:layout_below="@+id/text"
            android:orientation="vertical">

            <!--            <TextView-->
            <!--                android:id="@+id/dialogButtonNO"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                android:fontFamily="@font/montserrat_bold"-->
            <!--                android:paddingTop="12dp"-->
            <!--                android:paddingBottom="12dp"-->
            <!--                android:stateListAnimator="@null"-->
            <!--                android:text="@string/label_no"-->
            <!--                android:textAlignment="center"-->
            <!--                android:textColor="#007aff"-->
            <!--                android:textSize="@dimen/dimen14sp" />-->

            <!--            <View-->
            <!--                android:id="@+id/separator"-->
            <!--                android:layout_width="1dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:background="#cdced2" />-->

            <TextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen20dp"
                android:background="@drawable/rounded_corner_bg"
                android:backgroundTint="@color/lite_yellow"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingTop="@dimen/dimen5dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:paddingBottom="@dimen/dimen5dp"
                android:text="@string/label_update"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</layout>