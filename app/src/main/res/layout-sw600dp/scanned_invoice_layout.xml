<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/parent_layout"
        android:layout_height="wrap_content"
        android:background="#EDFEF6"
        android:layout_marginStart="@dimen/dimen3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="@dimen/dimen5dp">

        <LinearLayout
            android:id="@+id/sub_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/play_icon"
                    android:id="@+id/arrow"
                    android:rotation="0"
                    android:tint="@color/grey"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RPR-EOOO202049"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:id="@+id/boxes"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/total"
                android:textSize="12sp"/>


        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subInvoiceRecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_parent_layout"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:visibility="gone" />
    </RelativeLayout>
</layout>