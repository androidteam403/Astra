<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="960dp"
                android:layout_height="match_parent"
                android:background="#dcdfe9"
                tools:context=".ui.picklisthistory.PickListHistoryActivity">

                <RelativeLayout
                    android:id="@+id/left_side_menu"
                    android:layout_width="80dp"
                    android:layout_height="555dp">

                    <include layout="@layout/custom_menu_layout" />

                </RelativeLayout>


                <!-- Pick List History -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/left_side_menu"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/pick_list_history"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <!-- Search layout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <!-- search bar -->
                        <LinearLayout
                            android:layout_width="762dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Purchase Requisition Number"
                                    android:textColor="@color/bluetooth_header_bg"
                                    android:textSize="11sp" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/search_box_bg"
                                    android:drawableRight="@drawable/search_icon"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:hint="@string/all"
                                    android:paddingVertical="7dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="5dp"
                                    android:textColorHint="@color/bluetooth_header_bg"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Area Name"

                                    android:textColor="@color/bluetooth_header_bg"
                                    android:textSize="11sp" />

                                <Spinner
                                    android:id="@+id/area_name"
                                    style="@style/SpinnerTheme"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:spinnerMode="dropdown" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Route Number"
                                    android:textColor="@color/bluetooth_header_bg"
                                    android:textSize="11sp" />

                                <Spinner
                                    android:id="@+id/route_number"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:spinnerMode="dropdown" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Allocation Date"
                                    android:fontFamily="@font/poppins_semibold"

                                    android:textColor="@color/bluetooth_header_bg"
                                    android:textSize="11sp" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/search_box_bg"
                                    android:hint="@string/_20_08_2021_20_08_2022"
                                    android:paddingLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColorHint="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10sp"
                                android:gravity="bottom"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/rounded_corner_bg"
                                    android:backgroundTint="#00aeef"
                                    android:paddingHorizontal="5dp"
                                    android:paddingVertical="6dp"
                                    android:src="@drawable/search_icon"
                                    app:tint="#FFFFFF" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Recyclerview -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/pick_list_history_rcv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Footer -->
                <LinearLayout
                    android:id="@+id/footer_layout"
                    android:layout_width="880dp"
                    android:layout_height="70dp"

                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/left_side_menu"
                    android:background="#ffffff"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/black"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_baseline_receipt_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="10sp"
                        android:text="@string/picker_nhistory"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/total_assigned"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="#D1CBCB"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_120"
                            android:textColor="#C1BBBB"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/completed"
                            android:textColor="#D1CBCB"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="#C1BBBB"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PENDING"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="#D1CBCB"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_20"
                            android:textColor="#C1BBBB"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/yellow_line"
                    android:layout_width="10dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="150dp"
                    android:background="@color/lite_yellow"
                    android:paddingStart="28dp"
                    android:paddingTop="26dp"

                    android:textSize="11sp"
                    android:visibility="gone" />
            </RelativeLayout>

        </ScrollView>
    </HorizontalScrollView>

</layout>