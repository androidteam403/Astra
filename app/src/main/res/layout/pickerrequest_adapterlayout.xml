<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Purchase Rquisistion"
                    android:textColor="@color/bluetooth_header_bg"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:id="@+id/purchase_id"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Red Bull"
                    android:textColor="@color/black"
                    android:textSize="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:fontFamily="@font/poppins_semibold"

                    android:text="Product name"
                    android:textColor="@color/bluetooth_header_bg"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="-"

                    android:textColor="@color/black"
                    android:textSize="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Allocated qty"
                    android:textColor="@color/bluetooth_header_bg"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:id="@+id/allocation_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="3.00"

                    android:textAlignment="center"

                    android:textColor="@color/black"
                    android:textSize="8dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen3dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Scanned qty"
                    android:textColor="@color/bluetooth_header_bg"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:id="@+id/scanned_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semibold"

                    android:text="3.00"
                    android:textAlignment="center"

                    android:textColor="@color/black"
                    android:textSize="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen3dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Short Qty "
                    android:textColor="@color/bluetooth_header_bg"
                    android:textSize="@dimen/dimen10sp" />


                <TextView
                    android:id="@+id/shortqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="2"

                    android:textColor="@color/black"
                    android:textSize="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/dimen3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Requested by"

                    android:textColor="@color/bluetooth_header_bg"
                    android:textSize="@dimen/dimen10sp" />


                <TextView
                    android:id="@+id/requestedby"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="1"

                    android:textColor="@color/black"
                    android:textSize="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen3dp"
                android:orientation="vertical"

                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Request"
                    android:textColor="@color/bluetooth_header_bg"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Out of Stock"

                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen10sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/approvelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/approvebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingStart="@dimen/dimen12sp"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/dimen12sp"
                    android:paddingBottom="2dp"
                    android:text="Action"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen10sp" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>