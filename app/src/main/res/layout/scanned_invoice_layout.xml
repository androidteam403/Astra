<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/parent_layout"
        android:layout_height="wrap_content"
        android:background="#bcf5bc"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:id="@+id/sub_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen5dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="27dp"
                android:src="@drawable/logistics_arrow_right"
                android:id="@+id/right"
                android:rotation="0"
                android:visibility="gone"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_height="27dp"/>
            <ImageView
                android:layout_width="27dp"
                android:src="@drawable/logistics_checkbox"
                android:id="@+id/arrow"
                android:rotation="0"
                android:layout_marginTop="3dp"

                android:layout_marginBottom="3dp"
                android:layout_height="27dp"/>
            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RPR-EOOO202049"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:id="@+id/boxes"
                    android:textSize="10sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/total"
                android:textSize="10sp"/>


        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subInvoiceRecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_parent_layout"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:visibility="gone" />
    </RelativeLayout>
</layout>