<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dcdfe9"
        tools:context=".ui.picklisthistory.PickListHistoryActivity">

        <RelativeLayout
            android:id="@+id/left_side_menu"
            android:layout_width="105dp"
            android:layout_height="match_parent">

            <include layout="@layout/custom_menu_layout" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/header"
            android:visibility="gone"
            android:layout_marginEnd="25dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="770dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="PICK LIST HISTORY"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Chandra Mouli"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Supervisor"
                    android:textColor="@color/black"
                    android:textSize="11sp"

                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="10sp"

                android:src="@drawable/apollo_circle_logo" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="4dp"

                android:rotation="90"
                android:src="@drawable/black_right_arroww" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            android:id="@+id/header1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/header"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout

                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/square_stroke_bg"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="3dp"
                        android:paddingStart="10dp"
                        android:text="Hyderabad"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="150dp"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:rotation="90"
                        android:src="@drawable/black_right_arroww"
                        android:visibility="visible" />


                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout

                android:layout_width="189dp"
                android:layout_height="35dp"
                android:layout_marginStart="18sp"
                android:layout_marginTop="18sp"
                android:background="@drawable/square_stroke_bg"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="3dp"
                    android:paddingStart="10dp"
                    android:text="All"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="141dp"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp"
                    android:rotation="90"
                    android:src="@drawable/black_right_arroww"
                    android:visibility="visible" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/square_stroke_bg"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingTop="6dp"
                    android:text="Today"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/square_stroke_bg"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingTop="6dp"
                    android:text="Week"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/square_stroke_bg"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingTop="6dp"
                    android:text="Month"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/square_stroke_bg"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingTop="6dp"
                    android:text="DD/MM/YYYY"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/calendar"
                    android:visibility="visible" />


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/square_stroke_bg"
                android:padding="5dp">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_filter_list_24"
                    android:visibility="visible" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:background="@color/yellow"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="13sp"
                android:paddingTop="10sp"
                android:paddingEnd="13sp"
                android:text="Apply"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="28dp"
                android:background="@color/color_takeprint"
                android:src="@drawable/ic_baseline_file_upload_24" />

        </LinearLayout>
        <!-- Pick List History -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/header1"
            android:layout_toEndOf="@+id/left_side_menu"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/pick_list_history"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Search layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp">

                <!-- search bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Purchase Requisition Number"
                            android:textColor="@color/bluetooth_header_bg"
                            android:textSize="16sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/search_box_bg"
                            android:drawableRight="@drawable/search_icon"
                            android:fontFamily="@font/poppins_semibold"
                            android:hint="@string/all"
                            android:paddingVertical="7dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:textColorHint="@color/bluetooth_header_bg"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Area Name"

                            android:textColor="@color/bluetooth_header_bg"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/area_name"
                            style="@style/SpinnerTheme"
                            android:textSize="14sp"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Route Number"
                            android:textColor="@color/bluetooth_header_bg"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/route_number"
                            style="@style/SpinnerTheme"
                            android:textSize="14sp"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Allocation Date"
                            android:fontFamily="@font/poppins_semibold"

                            android:textColor="@color/bluetooth_header_bg"
                            android:textSize="16sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/search_box_bg"
                            android:hint="@string/_20_08_2021_20_08_2022"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColorHint="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/rounded_corner_bg"
                            android:backgroundTint="#00aeef"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="6dp"
                            android:src="@drawable/search_icon"
                            app:tint="#FFFFFF" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Recyclerview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pick_list_history_rcv"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:scrollbars="vertical" />
            </LinearLayout>

        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/left_side_menu"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_receipt_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginStart="10sp"
                android:text="@string/picker_nhistory"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_assigned"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_120"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/completed"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PENDING"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_20"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="126dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="28dp"
            android:paddingTop="26dp"
            android:text="DC ID"
            android:visibility="gone"
            android:textColor="@color/silver"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="29dp"
            android:paddingTop="26dp"
            android:text="Area Name"
            android:visibility="gone"
            android:textColor="@color/silver"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="520dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="28dp"
            android:visibility="gone"
            android:paddingTop="26dp"

            android:text="Date &amp; Time"
            android:textColor="@color/silver"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/yellow_line"
            android:layout_width="10sp"
            android:layout_height="74dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="182dp"
            android:background="@color/lite_yellow"
            android:paddingStart="28dp"
            android:paddingTop="26dp"

            android:textSize="11sp"
            android:visibility="gone" />

    </RelativeLayout>

</layout>