<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dimen5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".08"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Item Id"
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".18"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Item name"
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Pack Size"
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Barcode"
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".11"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Exp Date"
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Batch "
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".08"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="QOH"
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".08"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="  Qty"
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".17"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Manufacture By "
                        android:textColor="@color/bluetooth_header_bg"
                        android:textSize="@dimen/dimen11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/item_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".08"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".18"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:id="@+id/pack_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />


                    <TextView
                        android:id="@+id/barcode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView
                        android:id="@+id/sitename"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".11"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView

                        android:id="@+id/batch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />

                    <TextView

                        android:id="@+id/qoh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".08"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />

                    <LinearLayout
                        android:layout_width="@dimen/dimen0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".08"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/qty"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_approval_qty_edit"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:inputType="number"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen11sp"
                            tools:imeOptions="actionDone|actionNext" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/manufacture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".17"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen11sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>